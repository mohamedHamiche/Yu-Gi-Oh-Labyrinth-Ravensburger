struct tuile
    booléen fixe // 1 fixe  0 couloir
    entier trésor //0 si pas de trésor, n sinon avec 1<= n <=24
    booléen gauche, droite, haut, bas    //0 si mur, 1 si ouverture
    booléen posée //si la tuile est posée ou pas sur le plateau
tuile plateau [7][7] // tableau 2D de tuiles    

struct joueur
    booléen mon_tour
    string pseudo
    coordonneés postion_actuelle
    struct pile trésors_à_trouver
    entier nombre_de_points

Liste des fonctions:

entier modeDeJeu() //demande au joueur de jouer contre joueur ou de jouer contre machine

string lire_pseudo(joueur)

distribuer_cartes(joueur player1, joueur player2)

    empiler(joueur)
    

quiCommence() // retourne une valeur aleatoire (0 ou 1) qui permet de déterminer au début du jeu quel joueur commence 

tuile inititPlateau(tuile plateau[7][7], tuile *TuileEnMain)
    poserTuilesFixes(tuile plateau[7][7])
    poserTuilesCouloir(tuile plateau[7][7])
        initTuileEnMain(tuile *TuileEnMain)
    

    
    





affichageJeu() // cette fonction affichera le jeu sur le terminal ainsi que toutes les informations nécessaires (comme la tuile à insérer le nombres de trésor trouvés pour chaque joueur etc)

coordonnees() // cette fonction demandera les coordonnées au joueur pour insérer la tuile ou pour déplacer le pion et retournera dans la struct

insertionTuile() // cette fonction demandera les coordonnées au joueur pour insérer la tuile et validera ou pas le coup, et effectuera la modification du plateau (du tableau 2D de type plateau)

deplacementPion() //  la fonction verifiera si il y a un chemin si oui elle modifiera la position du joueur et mettra à jour le plateau pour afficher le joueur au bon endroit

tresorAtteint() // cette fonction vérifiera si le trésor est atteint lorsque le joueur à jouer son coup, si c'est le cas il renverra un booléen qui permetra a la fonction ci dessous de procéder au dépilement de la pile au trésor.

depileTresor() // cette fonction depilera chaque pile attribué aux joueurs lorsque celui ci aura trouvé un trésor

